{
  "name": "gravity",
  "productName": "Gravity",
  "version": "0.1.0",
  "description": "a modern soundboard app for dank drops",
  "license": "MIT",
  "repository": "RiskyMcdanger/gravity",
  "author": {
    "name": "Risky McDanger",
    "email": "riskymcdanger@gmail.com",
    "url": "null"
  },
  "build": {
    "appId": "com.riskymcdanger.gravity",
    "publish": [
      {
        "provider": "generic",
        "url": "https://example.com/updates"
      }
    ],
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "perMachine": true
    }
  },
  "scripts": {
    "build-linux": "build --linux",
    "build-osx": "build --osx",
    "build-win": "build --win",
    "start": "electron ."
  },
  "main": "main.js",
  "files": [
    "card.pug",
    "index.css",
    "index.js",
    "index.pug",
    "main.js",
    "modal.pug"
  ],
  "keywords": [
    "audio",
    "electron",
    "soundboard"
  ],
  "dependencies": {
    "drag-drop": "^2.13.3",
    "electron-config": "^1.0.0",
    "electron-pug": "^1.5.1",
    "ffmpeg-static": "^2.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^5.0.0",
    "material-design-icons": "^3.0.1",
    "materialize-css": "^1.0.0-beta",
    "nouislider": "^11.1.0",
    "sortablejs": "^1.7.0",
    "ytdl-core": "^0.20.2"
  },
  "devDependencies": {
    "electron": "^1.8.4",
    "electron-builder": "^20.8.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.10.0"
  }
}
